{
  "manifest_version": 3,
  "name": "Marktplaats Herplaatser",
  "version": "2.0.2",
  "description": "Automatiseer het herplaatsen van advertenties op Marktplaats.nl",
  
  "permissions": [
    "storage",
    "tabs",
    "clipboardRead",
    "clipboardWrite"
  ],
  
  "host_permissions": [
    "*://*.marktplaats.nl/*"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Marktplaats Herplaatser"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "*://www.marktplaats.nl/v/mijn-advertenties*",
        "*://www.marktplaats.nl/my-account/sell/*"
      ],
      "js": ["content_scripts/mijn_advertenties.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://www.marktplaats.nl/a/*",
        "*://www.marktplaats.nl/v/*/*",
        "*://www.marktplaats.nl/seller/view/*"
      ],
      "js": ["content_scripts/advertentie_scraper.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://www.marktplaats.nl/seller/view/*"
      ],
      "js": ["content_scripts/seller_view_handler.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://www.marktplaats.nl/v/verwijder-advertentie*",
        "*://www.marktplaats.nl/*/verwijder*"
      ],
      "js": ["content_scripts/verwijder_advertentie.js"],
      "run_at": "document_idle",
      "exclude_matches": [
        "*://www.marktplaats.nl/seller/view/*"
      ]
    },
    {
      "matches": [
        "*://www.marktplaats.nl/plaats",
        "*://www.marktplaats.nl/plaats/*",
        "*://www.marktplaats.nl/plaats/*/*",
        "*://www.marktplaats.nl/v/plaats-advertentie*",
        "*://www.marktplaats.nl/seller/post/*"
      ],
      "js": ["content_scripts/plaats_advertentie.js"],
      "run_at": "document_end"
    },
    {
      "matches": [
        "*://www.marktplaats.nl/plaats/*/edit"
      ],
      "js": ["content_scripts/plaats_advertentie.js"],
      "run_at": "document_end"
    }
  ]
}